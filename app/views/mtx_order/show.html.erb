
<p id="notice"><%= notice %></p>

<h1>Order detail </h1>

<div>
  <p>Customer : <%= @order.mtx_user.fullname %></p>
  <p>Email : <%= @order.mtx_user.email%></p>
  <p>Created date : <%= @order.created_at%></p>
  <p>Shipping address : <%= @order.shipping_address%></p>
  <p>Note : <%= @order.note%></p>
</div>
<br \>

<h4>List of products</h4>
<table class="table table-bordered table-striped" id="sortTable">
<thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
</thead>
<tbody>
<% @order.mtx_order_details.each do |orderDetail| %>
    <tr>
        <td><%= orderDetail.mtx_product.mtx_product_languages.first.name %></td>
        <td><%= orderDetail.mtx_product.price %></td>
        <td><%= orderDetail.quantity %></td>
    </tr>
<% end %>
</tbody>
</table>
<div class="nav">
  <%= link_to 'Back to list', mtx_order_show_list_path %>
</div>