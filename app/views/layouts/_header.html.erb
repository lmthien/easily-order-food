                  <li><%= link_to I18n.t('views.header.weekly_menu'), weekly_menu_manage_url %></li>
                  <li><%= link_to I18n.t('views.header.order_list'), mtx_order_show_list_url %></li>
                  <li><%= link_to I18n.t('views.header.user_list'), mtx_user_show_list_url %></li>
                </ul>
              </div>
