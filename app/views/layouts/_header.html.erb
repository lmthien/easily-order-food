<header>

  <div class="center-global cf">

    <a href="/" class="logo-link"><img src="/assets/logo.png" alt="RecipeFinder logo" class="logo"></a>

    <div class="language_div">
      <p>
        <%= link_to "", {locale: :en}, {:class => 'us_icon', :title => I18n.t('views.header.languages.english')} %>
        <%= link_to "", {locale: :vi}, {:class => 'vi_icon', :title => I18n.t('views.header.languages.vietnamese')} %>
      </p>
      </br>
    </div>
    <nav>
      <ul>
        <% if logged_in? %>
            <li class="user_name_label" title="<%= current_user.fullname %>">
              <%= current_user.fullname %>
            </li>
            <li>
              <%= link_to I18n.t('views.header.signout'), log_out_url %>
            </li>
        <% else %>
            <li>
              <%= link_to I18n.t('views.header.signin'), sign_in_url %>
            </li>
            <li>
              <%= link_to I18n.t('views.header.signup'), new_mtx_user_path %>
            </li>
        <% end %>
        <!--<li><a href="#3"><%= I18n.t('views.header.customer') %></a></li>-->
        <% if can? :show_list, current_user %>
            <li>
              <div class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown"><%= I18n.t('views.header.administrator') %>
                  <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to I18n.t('views.header.products'), mtx_products_path %></li>
                  <li><%= link_to I18n.t('views.header.weekly_menu'), weekly_menu_manage_url %></li>
                  <li><%= link_to I18n.t('views.header.order_list'), mtx_order_show_list_url %></li>
                  <li><%= link_to I18n.t('views.header.user_list'), mtx_user_show_list_url %></li>
                </ul>
              </div>
            </li>
        <% end %>
      </ul>
    </nav>

  </div>
  <!-- header-inside -->

</header>
