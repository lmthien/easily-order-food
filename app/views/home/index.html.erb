<div class="main center-global cf">

  <div class="latest">
    <div class="menu_header">
      <h1 class="floatLeft"><%= I18n.t('views.home.menu.today_menu_label') %></h1>
      <% if @cart.size > 0 %>
          <h3 class="cart">
            <%= link_to I18n.t('views.home.menu.shopping_cart'), place_orders_path %>
          </h3>
      <% else %>
          <h3 class="cart dispNone">
            <%= link_to I18n.t('views.home.menu.shopping_cart'), place_orders_path, :class => "cart_icon" %>
          </h3>
      <% end %>
    </div>
    <div class="menu_content">
    <% if @weeklyMenuDetailToday == nil %>
        <h5 class="text-center"><%= I18n.t('views.home.menu.empty_menu') %></h5>
    <% else %>
        <% @weeklyMenuDetailToday.each do |product| %>
            <div class="media">
              <img src="/assets/haddock.jpg" alt="Haddock skewers">

              <div>
                <div>
                  <h2 class="menu_item_information" title="<%= product.mtx_product_language.name %>"><%= product.mtx_product_language.name %></h2>
                </div>
                <div>
                  <p class="menu_item_information" title="<%= product.mtx_product_language.description %>">Discription: <%= product.mtx_product_language.description %></p>
                </div>
                <div>
                  <p class="menu_item_information" title="<%= product.mtx_product_language.intro %>">Intro: <%= product.mtx_product_language.intro %></p>
                </div>
                <div>
                  <p class="menu_item_information" title="<%= product.mtx_product.price %>">Price: <%= product.mtx_product.price %></p>
                </div>
                <% if @customer %>
                    <div>
                      <% if @cart.include? product.mtx_product.id.to_s %>
                          <button class="menu-button" id="addedbtn<%= product.mtx_product.id %>" disabled>Added</button>
                          <button class="menu-button dispNone" id="addbtn<%= product.mtx_product.id %>" onclick="add_item(<%= product.mtx_product.id %>)">Add
                            to cart
                          </button>
                      <% else %>
                          <button class="menu-button dispNone" id="addedbtn<%= product.mtx_product.id %>" disabled>Added</button>
                          <button class="menu-button" id="addbtn<%= product.mtx_product.id %>" onclick="add_item(<%= product.mtx_product.id %>)">Add
                            to cart
                          </button>
                      <% end %>
                    </div>
                <% end %>
              </div>
            </div>
            <!-- .media -->
            <br>
        <% end %>
    <% end %>
