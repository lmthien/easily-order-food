<p id="notice"><%= notice %></p>
<h1>List of users</h1>

<div class="list">
    <table class="table table-bordered table-striped table-hover" id="sortTable">
    <tr>
      <th><%= sortable "id", I18n.t('activerecord.attributes.user.id') %></th>
      <th><%= sortable "username", I18n.t('activerecord.attributes.user.username') %></th>
      <th><%= sortable "fullname", I18n.t('activerecord.attributes.user.fullname') %></th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
        <tr data-href="<%= mtx_user_path(user) %>">
          <td><%= link_to user.id,  mtx_user_path(user.id) %></td>
          <td><%= link_to user.username,  mtx_user_path(user.id) %></td>
          <td><%= link_to user.fullname,  mtx_user_path(user.id) %></td>
          <td>
              <% if user.active == 1%>
                <%= link_to 'Active', "#", data_user_id: user.id, data_user_status: 0, class: "active_user" %>
              <% else %>
                <%= link_to 'Inactive', "#", data_user_id: user.id, data_user_status: 1, class: "active_user"%>
              <% end %>
          </td>
    </tr>
    <% end %>
    <tr>
    </tr>
  </table>
  <%= paginate @users %>
</div>