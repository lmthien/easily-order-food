<h1>Sign up</h1>

<%= form_for @user, :url => {:action => "create"} do |f| %>
    <%= render 'shared/error_messages' %>

    <div class="field">
      <%= f.label :fullname %><br/>
      <%= f.text_field :fullname %>
    </div>
    <div class="field">
      <%= f.label :username %><br/>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %> <br/>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </div>
    </br>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>