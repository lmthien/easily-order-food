
<p id="notice"><%= notice %></p>

<h1><%= I18n.t('views.product.list_product_label') %></h1>

<div class="nav">
  <%= link_to I18n.t('views.product.new'), new_mtx_product_path, class: "btn btn-primary" %>
</div>

<br \>
<table class="table table-bordered table-striped" id="sortTable">
  <thead>
    <tr>
      <th><%= sortable "mtx_product_language.name", I18n.t('activerecord.attributes.product.name') %></th>
      <th><%= sortable "price", I18n.t('activerecord.attributes.product.price') %></th>
      <th><%= I18n.t('activerecord.attributes.product.Status') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mtxProducts.each do |mtx_product| %>
      <tr>
        <td><%= mtx_product.mtx_product_languages.first.name %></td>
        <td><%= mtx_product.price %></td>
        <td><%= mtx_product.status %></td>
        <td>
            <%= link_to I18n.t('views.product.show'), mtx_product, class: "btn btn-default" %> &nbsp;
            <%= link_to I18n.t('views.product.edit'), edit_mtx_product_path(mtx_product), class: "btn btn-default" %> &nbsp;
            <%= link_to I18n.t('views.product.delete'), mtx_product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


