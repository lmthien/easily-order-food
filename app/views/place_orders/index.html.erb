<h1>Place Order</h1>
<p>Show list product on daily menu</p>
<%= form_tag("place_orders/create_order", method: "post") do %>
<div class="CSSTableGenerator">
  <table>
    <tr>
      <td>
        Food
      </td>
      <td>
        Price
      </td>
      <td>
        Order
      </td>
    </tr>
    <% @daily_menu_detail.each do |daily_menu_detail| %>
        <tr>
          <td>
            <%= daily_menu_detail.mtx_product.mtx_product_languages.first.name %>
          </td>
          <td>
            <%= daily_menu_detail.mtx_product.price %>
          </td>
          <td>
            <input type="text" value="0" class="product_item" attr_price="<%= daily_menu_detail.mtx_product.price %>"
                   onkeypress="return isNumber(event)"
                   onchange="calculateTotal();"
                   onkeyup="this.onchange();"
                   name='product[<%= daily_menu_detail.mtx_product.id %>_<%= daily_menu_detail.mtx_product.price %>]'>
          </td>
        </tr>
    <% end %>
    <tr>
      <td></td>
      <td>Total:</td>
      <td><input type="text" name="total_order" id="total_order" onkeypress="return false;"></td>
    </tr>
  </table>
</div>
<%= submit_tag("Create Order") %>
<% end %>
